<% include partials/header/header-landing %>

<div id="main-section" class="container mt-5">    
    <form class="form-horizontal needs-validation" action="/resend" Method="POST" novalidate>        
        <div class="row mt-5">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h5 class="text-center text-danger">If you have not received a verification email or if you have mistyped your email addresses, you can resend the verfication email</h5>                    
            </div>
        </div>
        <hr>
        <div class="row mt-5">
            <div class="col-md-3 field-label-responsive">
                <label for="email">E-Mail Address</label>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-at"></i></div>
                        <input type="email" name="email" class="form-control" id="email"  placeholder="you@example.com" required pattern="^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$">
                        <div class="invalid-feedback">Enter an email please.</div>
                    </div>                        
                </div>
            </div>
        </div>            

        <div class="row mt-3">				
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-success btn-block"><i class="fas fa-sign-in-alt"></i> Resend</button>
            </div>							
        </div>			
    </form>

</div>

