<% include ../partials/header/header-landing %>

    <div id="main-section" class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card card-body">
                    <h3 class="text-center mb-4">Edit Campground</h3>
                    <form action="/campgrounds/<%=campground.slug%>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control input-lg" name="campground[name]"
                                    type="text" value="<%= campground.name %>" required autofocus>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" rows="5" name="campground[description]"><%= campground.description %></textarea>
                            </div>
                            <div class="form-group">
                                <input class="form-control input-lg" name="campground[price]"
                                    type="number" min="0.01" step="0.01" value="<%= campground.price %>" required>
                            </div>

                            <div class="form-group">
                                <input class="form-control input-lg" name="campground[location]" type="text" value="<%= campground.location %>" required>
                            </div>
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                    </div>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="inputGroupFile01" name="image"
                                            aria-describedby="inputGroupFileAddon01" accept="image/*">
                                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                    </div>                                                                        
                                </div>
                                <img id="image-preview" src="http://via.placeholder.com/150" alt="your campground image" class="img-thumbnail" />
                                
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <button class="btn btn-lg btn-success btn-block">
                                            <a class="text-decoration-none" href="#" onclick="window.history.back()" role="button">Back</a>
                                        </button>
                                    </div>
                                    <div class="col-md-6">
                                        <button class="btn btn-lg btn-primary btn-block">
                                            <a href="#"
                                                onclick="document.getElementById('add-campground').submit();"></a>Add
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

<% include ../partials/footer/footer-validation %>