<% include partials/header/header-landing %>

  <header class="jumbotron jumbotron-fluid">
    <div class="container-fluid text-center">
      <h1 class="display-3">Welcome To YelpCamp!</h1>
      <p class="lead pb-4">Deliver the best user experience campgrounds with our carefully observation and ratings</p>
      <p><a href="#" class="btn btn-primary btn-lg red-button" role="button">Learn More</a></p>
    </div>
  </header>

  <section id="services" class="container">
      <%if(randomCampgrounds.length > 0) {%>
        <h2 class="display-4 text-center mt-5 mb-3">Campgrounds</h2>
        <div class="row text-center">
          <%randomCampgrounds.forEach(randomCampground => {%>
            <%if(randomCampgrounds.length === 2) {%>
              <div class="col-md-6 mb-4">
            <%} else {%>
              <div class="col-md-4 mb-4">
            <%}%>
            
            <div class="card h-100">
              <img id="campground-image" class="card-img-top" src="<%= randomCampground.image.url%>" alt="Design">
              <div class="card-body">
                <h4 class="card-title"><%= randomCampground.name %></h4>
                <p><%= randomCampground.description.substr(0, 100) + "..." %></p>
                <%if(randomCampground.rating === 0) {%>
                  <p class="card-text"><em>No Reviews yet</em></p>
                <%} else {%>
                  <span class="fa fa-star star-checked"></span>
                  <span class="fa fa-star <% if (randomCampground.rating > 1.5) { %> star-checked <% } %>"></span>
                  <span class="fa fa-star <% if (randomCampground.rating > 2.5) { %> star-checked <% } %>"></span>
                  <span class="fa fa-star <% if (randomCampground.rating > 3.5) { %> star-checked <% } %>"></span>
                  <span class="fa fa-star <% if (randomCampground.rating > 4.5) { %> star-checked <% } %>"></span>
                  <span>(<%= randomCampground.reviews.length %>)</span>
                <%}%>
              </div>
              <div class="card-footer py-4">
                <a href="/campgrounds/<%= randomCampground.slug %>" class="btn btn-secondary">More Details &raquo;</a>
              </div>
            </div>
        </div>
          <%})%>
    </div>
    <div class="d-flex flex-row-reverse">
      <a href="/campgrounds/page/1">See More</a>
    </div>
      <%} else {%>
        <h2>Please add you favorite campgrounds</h2>
      <%}%>
  </section>

  <section class="container-fluid text-center py-4 mt-4" id="contact">
    <h2 class="display-4 pb-4 my-4">Get in touch with us today!</h2>
    <p class="lead pb-3">Send us a message and we will get back to
      you as soon as possible.</p>
    <a href="#" class="btn btn-primary btn-lg red-button mb-4" role="button">Contact us</a>
  </section>

  <footer class="py-3 bg-light">
    <div class="container">
      <p class="text-center">Copyright &copy; Hello Consultancy 2019</p>
    </div>
  </footer>

<% include partials/footer/footer-validation %>